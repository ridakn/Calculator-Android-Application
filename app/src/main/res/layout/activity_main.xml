<?xml version="1.0" encoding="utf-8"?>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView1" />

    <EditText
        android:id="@+id/edt1"
        android:textSize="60sp"
        android:gravity="end"
        android:background="@android:color/transparent"
        android:autofillHints="@string/zero"
        android:hint="@string/zero"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_marginEnd="5dp"
        android:layout_columnSpan="4" />

        <Button
            android:id="@+id/ac"
            android:textSize="25sp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/button_bg_round"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:text="@string/ac" />

        <Button
            android:id="@+id/plusminus"
            android:text="@string/plus_minus"
            android:textSize="25sp"
            android:background="@drawable/button_bg_round"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/percent"
            android:text="@string/percent"
            android:textSize="25sp"
            android:background="@drawable/button_bg_round"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/div"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/roundbutton2"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:text="@string/divide" />

        <Button android:text="@string/seven"
            android:textSize="25sp"
            android:id="@+id/seven"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/eight"
            android:textSize="25sp"
            android:id="@+id/eight"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/nine"
            android:textSize="25sp"
            android:id="@+id/nine"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/multiply"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:id="@+id/mul"
            android:background="@drawable/roundbutton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/four"
            android:textSize="25sp"
            android:id="@+id/four"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/five"
            android:textSize="25sp"
            android:id="@+id/five"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/six"
            android:textSize="25sp"
            android:id="@+id/six"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/minus"
            android:textSize="25sp"
            android:id="@+id/sub"
            android:textColor="#FFFFFF"
            android:background="@drawable/roundbutton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="10dp"/>

        <Button android:text="@string/one"
            android:textSize="25sp"
            android:id="@+id/one"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/two"
            android:textSize="25sp"
            android:id="@+id/two"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/three"
            android:textSize="25sp"
            android:id="@+id/three"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"/>

        <Button android:text="@string/plus"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:id="@+id/add"
            android:background="@drawable/roundbutton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"/>

        <Button
            android:id="@+id/zero"
            android:textSize="25sp"
            android:layout_gravity="fill"
            android:layout_columnSpan="2"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:text="@string/zero" />

        <Button android:text="@string/dot"
            android:textSize="25sp"
            android:id="@+id/dot"
            android:background="@drawable/rectround"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="fill"/>

        <Button android:text="@string/equal"
            android:textSize="25sp"
            android:textColor="#FFFFFF"
            android:id="@+id/equal"
            android:background="@drawable/roundbutton2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:paddingBottom="5dp"/>

    </GridLayout>


